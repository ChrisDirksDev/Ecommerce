{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules", "*"],
      "services/*": ["services/*"],
      "models/*": ["models/*"],
      "controllers/*": ["controllers/*"],
      "middlewares/*": ["middlewares/*"],
      "utils/*": ["utils/*"],
      "config/*": ["config/*"],
      "types/*": ["types/*"]
    }
  },
  "include": ["src", "tests"]
}
